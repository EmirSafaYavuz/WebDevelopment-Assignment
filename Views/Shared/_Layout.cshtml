<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Pine Software</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Assignment.styles.css" asp-append-version="true"/>
</head>
<body>

<header id="banner">
    <img src="~/images/PineSoftware.png" alt="Pine Software Logo" class="logo">
</header>

<!-- Navigasyon Menüsü -->
<nav>
    <ul>
        <li><a asp-controller="Home" asp-action="Index" class="menu-item">Anasayfa</a></li>
        <li><a asp-controller="About" asp-action="Index" class="menu-item">Hakkımızda</a></li>
        <li><a asp-controller="Products" asp-action="Index" class="menu-item">Projelerimiz</a></li>
        <li><a asp-controller="Contact" asp-action="Index" class="menu-item">İletişim</a></li>
    </ul>
</nav>

<div>
    <main role="main" class="content-wrapper">
        @RenderBody()
    </main>
</div>

<footer>
    &copy; 2024 - Emir Safa Yavuz - <a href="https://maltepe.edu.tr" target="_blank">Maltepe University</a>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>